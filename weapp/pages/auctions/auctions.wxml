<van-radio-group value="{{ radio }}">
  <van-cell-group title="选择所属竞价场次：">
    <van-cell wx:for="{{ stages }}" wx:key="id" title="{{ item.dateString }}" clickable data-name="{{ item.id }}" bind:click="onClick">
      <van-radio slot="right-icon" name="{{ item.id }}" />
    </van-cell>
  </van-cell-group>
</van-radio-group>

