<van-popup show="{{ showPop }}" custom-style="width: 100%;height: 50%" bind:close="onClose">
  <van-datetime-picker type="datetime" value="{{ currentDate }}" min-date="{{ minDate }}" max-date="{{ maxDate }}" formatter="{{ formatter }}" bind:input="onInput" bind:confirm="onConfirm" bind:cancel="onCancel" />
</van-popup>

<button open-type="getUserInfo">用户信息授权</button>
<button open-type="openSetting" bindopensetting="callback">打开设置页</button>

<van-cell-group title="竞价价格设置">
  <van-field value="{{ startPrice }}" label="车辆起拍价" placeholder="请输入起拍价" type="number" border="{{ false }}" data-field="startPrice" bind:change="onChange2" />
  <van-field value="{{ reservePrice }}" label="车辆保留价" placeholder="请输入保留价" type="digit" border="{{ false }}" data-field="reservePrice" bind:change="onChange2" />
</van-cell-group>

