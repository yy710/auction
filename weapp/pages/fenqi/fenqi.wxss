/* pages/fenqi/fenqi.wxss */

.fenqi-container {
  background-color: #fff;
  min-height: 100%;
  width: 100%;
}

.fenqi-price {
  margin-bottom: 24rpx;
  margin: 20px;
  position: absolute;
  top: 4.5rem;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2px 0.2rem 0 rgba(73, 65, 81, 0.09);
  height: 130px;
  text-align: center;
  width: 90%
}

.fenqi-price-title {
  margin: 0 auto;
  font-size: 18px;
  font-weight: 500;
  line-height: 1.38;
  text-align: center;
  color: #1b1b1b;
  margin-top: 0.49rem;
  margin-bottom: 0.1rem;
  padding: 0px 20px 20px 20px;
}

.fenqi-price-total {
  margin: 0 auto;
  position: relative;
  height: 0.4rem;
  line-height: 0.4rem;
  opacity: 0.69;
  font-size: 14px;
  text-align: center;
  color: #999;
  text-decoration: line-through;
  margin-bottom: 10px;
}

.fenqi-detail-container {
  width: 100%;
  background-color: #fff;
  padding-top: 90px;
}

.fenqi-detail-title {
  text-align: center;
  font-stretch: normal;
  color: #585858;
  font-size: 16px;
}

.fenqi-detail-title-span {
  display: inline-block;
  font-size: 35px;
  font-weight: 500;
  color: #f85d00;
}

.fenqi-detail-content-container {
  width: 100%;
  padding-top: 10px;
}

.fenqi-detail-content {
  justify-content: space-between;
  display: flex;
  margin-top: 20px;
  margin-left: 40px;
  margin-right: 40px;
  border-bottom: 1px solid #f8f8f8;
  padding-bottom: 10px;
}

.fenqi-label {
  color: #585858;
  font-size: 18px;
  display: inline-block;
}

.fenqi-detail {
  color: #999;
  font-size: 12px;
  padding-top: 20px;
  padding-bottom: 20px;
  margin-left: 40px;
  margin-right: 40px;
}

.fenqi-need {
  width: 100%;
  margin-top: 20px;
}

.fenqi-need-title {
  height: 20px;
  text-align: center;
  margin-left: 20px;
  margin-right: 20px;
}

.fenqi-line {
  width: 100%;
  height: 1px;
  text-align: center;
  border-top: 1px solid #e2e2e2;
  background-color: #fff;
}

.fenqi-text {
  font-size: 14px;
  color: #999;
  position: relative;
  top: -18px;
  display: inline-block;
  background-color: #fff;
  padding-left: 10px;
  padding-right: 10px;
}

.fenqi-item-box {
  width: 100%;
  background-color: #fff;
}

.fenqi-item-title {
  color: #585858;
  font-size: 18px;
  margin-left: 30px;
  margin-right: 30px;
  margin-top: 30px;
  font-weight: 500;
}

.fenqi-item-detail {
  color: #585858;
  font-size: 14px;
  margin-left: 30px;
  margin-right: 30px;
  margin-top: 5px;
}

.footer-box {
  width: 100%;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  display: flex;
}

.footer-box .footer-button {
  flex: 1;
}

.footer-box .contact-btn {
  border-radius: 0rpx;
  text-align: center;
  height: 100%;
  line-height: 100rpx;
  background-color: #008000;
  color: #fff;
  font-size: 35rpx;
}

.footer-box .share-btn {
  border-radius: 0rpx;
  text-align: center;
  height: 100%;
  line-height: 100rpx;
  background-color: #fff;
  color: #000;
  font-size: 35rpx;
}
